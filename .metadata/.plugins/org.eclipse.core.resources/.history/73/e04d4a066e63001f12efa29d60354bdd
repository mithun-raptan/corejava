public class FindHowManyWordsAreThere {
	public static void main(String[] args) {
		//using split() method
		
//		String s = "developer is a developer";
//		String[] str = s.split(" ");
//		System.out.println(str.length);
		
		
		
		//without using split() method
		
//		String s = "developer is a developer";
//		int count = 0;
//		for(int i = 0 ; i <s.length();i++ ) {
//			if((i==0 && s.charAt(i)!=' ')||(s.charAt(i)!=' ' && s.charAt(i-1) ==' ')) {
//				count++;
