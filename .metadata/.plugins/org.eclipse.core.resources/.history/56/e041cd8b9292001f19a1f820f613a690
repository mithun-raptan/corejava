package com.programmingSachin.Array;

import java.util.Arrays;

public class ReverseArray {
	public static void main(String[] args) {
		int[] arr = {10,20,30,40};
		int start = 0; 
		int end = arr.length-1;
		while(start<=end) {
		int temp = arr[end];
		arr[end]=arr[start];
		arr[start] = temp;
		start++;
		end--;
		}
		System.out.println(Arrays.toString(arr));


}
}
